{
  // ─── Brackets ───────────────────────────────────────────────────────
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // ─── Coding ─────────────────────────────────────────────────────────
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.inlayHints.enabled": "on",
  "editor.accessibilitySupport": "off",

  // ─── Font ───────────────────────────────────────────────────────────
  "editor.fontFamily": "JetBrains Mono, ‘Monaspace Neon’, monospace",
  "editor.fontVariations": "‘wght’ 350",
  "editor.fontLigatures": "'ss01', 'ss19', 'cv03', 'zero'", // JetBrains Mono
  "editor.fontSize": 13,
  "editor.lineHeight": 30,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": 500,

  // ─── Cursor ─────────────────────────────────────────────────────────
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",

  // ─── Explorer ───────────────────────────────────────────────────────
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "explorer.compactFolders": false,

  // ─── Terminal ──────────────────────────────────────────────────────
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1",
    "CW_NEW_SESSION": "1",
    "Q_NEW_SESSION": "1"
  },
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
    "docker-desktop"
  ],
  "terminal.integrated.suggest.enabled": true,

  // ─── Workbench ─────────────────────────────────────────────────────
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.smoothScrolling": true,
  "workbench.editor.enablePreview": true,
  "workbench.editor.empty.hint": "hidden",
  "workbench.colorCustomizations": {},
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Dracula Theme",

  // ─── Git ───────────────────────────────────────────────────────────
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",

  // ─── Prettier ──────────────────────────────────────────────────────
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.semi": true,

  // ─── Language Formatters ───────────────────────────────────────────
  "[liquid]": {
    "editor.defaultFormatter": "Shopify.theme-check-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // ─── Extensions & Themes ───────────────────────────────────────────
  "material-icon-theme.files.color": "#26A69A",
  "material-icon-theme.activeIconPack": "react_redux",
  "gitlens.graph.minimap.enabled": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "redhat.telemetry.enabled": false,
  "settingsSync.ignoredExtensions": [],
  "typeChallenges.workspaceFolder": "/Users/hung.dinh/.typeChallenges",
  "emmet.includeLanguages": {
    "postcss": "css"
  },

  // ─── Copilot & GitHub ──────────────────────────────────────────────
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,

  // ─── Chat & Agents ─────────────────────────────────────────────────
  "chat.agent.enabled": true,
  "chat.mcp.access": "all",
  "chat.mcp.serverSampling": {
    "Global in Code: terraform": {
      "allowedModels": ["github.copilot-chat/gpt-4.1"]
    }
  },
  "chat.todoListTool.enabled": true,
  "chat.agentSessionsViewLocation": "view",
  "chat.agent.maxRequests": 100,

  // ─── GitHub Pull Requests ──────────────────────────────────────────
  "githubPullRequests.codingAgent.uiIntegration": true,
  "githubPullRequests.experimental.useQuickChat": true,
  "githubPullRequests.createOnPublishBranch": "never",

  // ─── Remote & Containers ───────────────────────────────────────────
  "remote.SSH.remotePlatform": {
    "sandbox.2k2lnc.csb": "linux"
  },
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
  "docker.extension.enableComposeLanguageServer": false,
  "docker.languageserver.formatter.ignoreMultilineInstructions": true,

  // ─── Search & Security ─────────────────────────────────────────────
  "security.workspace.trust.untrustedFiles": "open",

