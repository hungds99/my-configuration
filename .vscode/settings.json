{
  // Bracket
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // Coding
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Font
  "editor.fontFamily": "Monaspace Radon, Fira Code, Monaco, monospace, Monaspace Neon",
  "editor.fontVariations": "'wght' 350",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'calt', 'dlig'", // monaspace
  "editor.fontSize": 14,
  "editor.lineHeight": 30,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": 500,

  // Cursor
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",

  // Theme
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",

  // Explorer
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,

  // Terminal
  "terminal.integrated.fontSize": 13,
  // "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },

  // Parameter
  "inline-parameters.enabled": true,
  "editor.inlayHints.enabled": "on",

  // Workbench
  "workbench.list.smoothScrolling": true,
  "workbench.editor.enablePreview": true,
  "workbench.colorCustomizations": {},

  // Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.fetchOnPull": true,

  // Format Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.semi": true,

  // Spell Checker
  "cSpell.userWords": [
    "deliv",
    "feedforce",
    "fulfillable",
    "isbot",
    "Makuake",
    "Metafield",
    "METAFIELDS",
    "mksorders",
    "multipass",
    "noopener",
    "OIDC",
    "Parens",
    "PAYPAY",
    "Pipeable",
    "Pkce",
    "PKEY",
    "Replayable",
    "resave",
    "revalidator",
    "safepath",
    "SBPS",
    "shopifyql",
    "SUPREMETECH",
    "unmarshall",
    "UNSUBMIT",
    "uuidv",
    "VITE",
    "YYYYMMDDH"
  ],

  // Shopify
  "[liquid]": {
    "editor.defaultFormatter": "Shopify.theme-check-vscode"
  },

  // Material Icon Theme
  "material-icon-theme.files.color": "#26a69a",
  "material-icon-theme.activeIconPack": "react_redux",
  "editor.accessibilitySupport": "off"
}
